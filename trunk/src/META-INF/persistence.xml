<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
	<persistence-unit name="emeseii" transaction-type="RESOURCE_LOCAL">
		<class>Negocio.Competicion.BOCompeticion</class>

		<class>Negocio.Departamento.BODepartamento</class>

		<class>Negocio.Empleado.BOEmpleado</class>

		<class>Negocio.Empleado.BOEmpleadoCompeticion</class>
		<class>Negocio.Empleado.BOEmpleadoCompeticionId</class>
		<class>Negocio.Empleado.BOEmpleadoCompleto</class>
		<class>Negocio.Empleado.BOEmpleadoParcial</class>
		<validation-mode>NONE</validation-mode>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/emeseii"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="1234"/>
			<property name="eclipselink.dll-generation" value="create-tables"/>
			<property name="eclipselink.dll-generation.output-mode" value="both"/>
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
		</properties>

	</persistence-unit>
</persistence>
